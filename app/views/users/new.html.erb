<div class="center">
  <ul class="list-group"></ul>
  <%= form_for(@user) do |f| %>
      <li class="list-group-item">
        <p><%= f.label :name, '用户名' %></p>
        <%= f.text_field :name %>
      </li>
      <li class="list-group-item">
        <p><%= f.label :email, '邮箱' %></p>
        <%= f.text_field :email %>
      </li>
      <li class="list-group-item">
        <p><%= f.label :password, '密码' %></p>
        <%= f.password_field :password %>
      </li>
      <li class="list-group-item">
        <p><%= f.label :password_confirmation, '密码确认' %></p>
        <%= f.password_field :password_confirmation %>
      </li>
      <li class="list-group-item">
        <%= f.submit '注册', class: 'btn btn-large btn-primary' %>
      </li>
  <% end %>
  </ul>
</div>