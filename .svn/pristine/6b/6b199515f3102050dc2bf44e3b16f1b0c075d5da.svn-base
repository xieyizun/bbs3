<div class="center">
  <ul>
    <% @posts.each do |post| %>
        <li>
          <div class="panel panel-default">
            <div class="panel-heading">发帖人: <%= post.user.name %></div>
            <div class="panel-body">
              <p><%= post.content %></p>
              <div id="time">
                <span id="comment"><%= link_to '评论', post %></span>
                <span><%= format_time(post.created_at) %></span>
              </div>
            </div>
          </div>
        </li>
     <% end %>
  </ul>
  <div id="paging"><%= will_paginate @posts %></div>
</div>
